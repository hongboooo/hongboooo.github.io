---
import profileRaw from '../data/profile.yaml';
import ParticleBackground from './ParticleBackground.tsx';
const profile = profileRaw as any;
---

<section class="relative min-h-[85vh] flex items-center justify-center overflow-x-hidden pt-20">
  <!-- Particle background -->
  <div class="absolute inset-0">
    <ParticleBackground client:only="react" />
  </div>

  <!-- Gradient overlay -->
  <div class="absolute inset-0 bg-gradient-to-br from-accent/5 via-transparent to-purple-500/5 dark:from-accent/10 dark:via-transparent dark:to-purple-500/10 pointer-events-none" />

  <div class="container-page relative z-10">
    <div class="max-w-3xl mx-auto text-center">
      <!-- Avatar -->
      <div class="mb-8 inline-block">
        <div class="w-28 h-28 rounded-full overflow-hidden ring-4 ring-accent/20 ring-offset-4 ring-offset-[var(--bg-primary)] animate-float">
          <img
            src={profile.avatar}
            alt={profile.name}
            class="w-full h-full object-cover"
            width="112"
            height="112"
          />
        </div>
      </div>

      <!-- Name -->
      <h1 class="font-heading text-4xl sm:text-5xl md:text-6xl font-bold tracking-tight mb-4">
        {profile.name}
      </h1>

      <!-- Title -->
      <p class="text-lg sm:text-xl text-muted mb-4">
        {profile.title} Â· {profile.department}
      </p>
      <p class="text-muted mb-6">
        {profile.affiliation}
      </p>

      <!-- Tagline -->
      <p class="text-xl sm:text-2xl font-heading font-medium text-accent/90 mb-8 leading-relaxed">
        &ldquo;{profile.tagline}&rdquo;
      </p>

      <!-- Keywords -->
      <div class="flex flex-wrap justify-center gap-2 mb-8">
        {profile.keywords.map((kw: string) => (
          <span class="px-3 py-1.5 rounded-full text-sm font-medium bg-[var(--bg-alt)] border border-subtle text-muted hover:border-accent/30 hover:text-accent transition-all duration-200 cursor-default">
            {kw}
          </span>
        ))}
      </div>

      <!-- Contact links -->
      <div class="flex justify-center items-center gap-5 mb-10">
        <a
          href={`mailto:${profile.email}`}
          class="inline-flex items-center gap-1.5 text-sm text-muted hover:text-accent transition-colors"
        >
          <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75" />
          </svg>
          {profile.email}
        </a>
        {profile.links.googleScholar && (
          <a
            href={profile.links.googleScholar}
            target="_blank"
            rel="noopener"
            class="inline-flex items-center gap-1.5 text-sm text-muted hover:text-accent transition-colors"
          >
            <svg class="w-4 h-4" viewBox="0 0 24 24" fill="currentColor">
              <path d="M5.242 13.769L0 9.5 12 0l12 9.5-5.242 4.269C17.548 11.249 14.978 9.5 12 9.5c-2.977 0-5.548 1.748-6.758 4.269zM12 10a7 7 0 100 14 7 7 0 000-14z" />
            </svg>
            Google Scholar
          </a>
        )}
      </div>

      <!-- CTA -->
      <a
        href="/publications"
        class="inline-flex items-center gap-2 px-6 py-3 rounded-xl bg-accent text-white font-medium text-sm hover:bg-accent-dark transition-colors shadow-lg shadow-accent/20"
      >
        View Research
        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M13 7l5 5m0 0l-5 5m5-5H6" />
        </svg>
      </a>
    </div>
  </div>

  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce">
    <svg class="w-5 h-5 text-faint" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
      <path stroke-linecap="round" stroke-linejoin="round" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
    </svg>
  </div>
</section>
